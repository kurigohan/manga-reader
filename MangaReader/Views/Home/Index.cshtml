    @Scripts.Render("~/Scripts/app/shared/mangaModel.js")
    @Scripts.Render("~/Scripts/app/shared/mangaService.js")
    @Scripts.Render("~/Scripts/app/shared/mangaGalleryDirective.js")
    @Scripts.Render("~/Scripts/app/shared/artistsService.js")
    @Scripts.Render("~/Scripts/app/shared/seriesService.js")
    @Scripts.Render("~/Scripts/app/shared/tagsService.js")
    @Scripts.Render("~/Scripts/app/home/homeController.js")
    @Scripts.Render("~/Scripts/app/viewer/mangaViewerController.js")
    @Scripts.Render("~/Scripts/app/viewer/pageNavigationDirective.js")
    @Scripts.Render("~/Scripts/app/details/mangaDetailsController.js")
    @Scripts.Render("~/Scripts/app/artists/artistsController.js")
    @Scripts.Render("~/Scripts/app/artists/mangaByArtistController.js")
    @Scripts.Render("~/Scripts/app/series/seriesController.js")
    @Scripts.Render("~/Scripts/app/series/mangaBySeriesController.js")
    @Scripts.Render("~/Scripts/app/tags/tagsController.js")
    @Scripts.Render("~/Scripts/app/tags/mangaByTagController.js")
    @Scripts.Render("~/Scripts/app/search/searchController.js")
